<%include ../partials/header%>

	<div class="">
		<header class="jumbotron">
			<div class="container">
				<h1>	Welcome to Yelpcamp      </h1>
				<p>View our hand-picked campgrounds from all over the world	</p>

				<p>
					<a class="btn btn-primary btn-large " href="/campgrounds/new">Add New Campground</a>

				</p>		
			</div>
		</header>
		
		<!-- //working on the grid-->
		<div class="row">
			<div class="col-lg-12">	
				<h3> Our Most Popular Campgrounds </h3>
			</div>			
		</div>
		
		<div class="row text-center" style="display:flex; flex-wrap: wrap; ">
			<%for(var i=0; i<campgrounds.length; i++){%>
				<div class="col-md-6 col-sm-12 col-lg-4">
					<div class="card m-2" >
						<img class="card-img-top" style="height: 15rem;" src="<%=campgrounds[i].image%>">
						  <div class="card-body">
							<h5 class="card-title"><%=campgrounds[i].name%></h5>
							<a href="/campgrounds/<%=campgrounds[i]._id%>" class="btn btn-primary">More Info</a>
							<p class="card-text">Some quick example text to build on the card title.</p>
						  </div>

					</div>
				</div>
			<%}%>		
		</div>
		

		
	</div>
	

	<%include ../partials/footer%>